                    <div><span id="titlePersonalI">Personal Information Manager</span></div>
                </div>
            </div>
            <div class="costadoDer">
                <a href="auth/google-login" class="btn btn-secondary"> Sync Account</a>
            </div>
        </header>
        <div class="content">
            <div class="aplicacionesTitle"><h1>YOUR APPLICATIONS</h1></div>
            <div class="aplicaciones">
                <div class="imagenenesSup">
                    <CuadroNavegacion Contenido="Drive" DireccionImagen="/imagenes/driveLogo.png" Redireccionamiento="auth/google-login"></CuadroNavegacion>
                    <CuadroNavegacion Contenido="Calendar" DireccionImagen="/imagenes/calendarLogo.png" Redireccionamiento=""></CuadroNavegacion>
                    <CuadroNavegacion Contenido="Password Manager" DireccionImagen="/imagenes/passwordLogo.png" Redireccionamiento="" CasoEspecial=true></CuadroNavegacion>

