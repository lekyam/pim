                <div class="imagenesInferior">
                    <CuadroNavegacion Contenido="Contacs" DireccionImagen="/imagenes/contactsLogo.png" Redireccionamiento=""></CuadroNavegacion>
                    <CuadroNavegacion Contenido="Notes" DireccionImagen="/imagenes/notesLogo.png"  Redireccionamiento=""></CuadroNavegacion>
                    <CuadroNavegacion Contenido="E-Mail" DireccionImagen="/imagenes/emailLogo.png"  Redireccionamiento=""></CuadroNavegacion>
                </div>
            </div>
        </div>


    </NotAuthorized>

</AuthorizeView>
