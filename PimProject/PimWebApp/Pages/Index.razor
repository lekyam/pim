@page "/"
<AuthorizeView>
    <Authorized>
        <header id="cabecera">
            <div class="costadoIzq">
                <div><img src="/imagenes/Home.png" alt="PIM"></div>
                <div class="title">
                    <div><span id="titlePIM">PIM</span></div>
                    <div><span id="titlePersonalI">Personal Information Manager</span></div>
                </div>
            </div>
            <div class="costadoDer">
                <Perfil></Perfil>
            </div>
        </header>
        <div class="content">
            <div class="aplicacionesTitle"><h1>YOUR APPLICATIONS</h1></div>
            <div class="aplicaciones">
                <div class="imagenenesSup">
                    <CuadroNavegacion Contenido="Drive" DireccionImagen="/imagenes/driveLogo.png" Redireccionamiento="" Active=true></CuadroNavegacion>
                    <CuadroNavegacion Contenido="Calendar" DireccionImagen="/imagenes/calendarLogo.png" Redireccionamiento="fetchdata" Active=true></CuadroNavegacion>
                    <CuadroNavegacion Contenido="Password Manager" DireccionImagen="/imagenes/passwordLogo.png" Redireccionamiento="" CasoEspecial=true Active=true></CuadroNavegacion>

                </div>
                <div class="imagenesInferior">
                    <CuadroNavegacion Contenido="Contacts" DireccionImagen="/imagenes/contactsLogo.png" Redireccionamiento="" Active=true></CuadroNavegacion>
                    <CuadroNavegacion Contenido="Notes" DireccionImagen="/imagenes/notesLogo.png"  Redireccionamiento="notes" Active=true></CuadroNavegacion>
                    <CuadroNavegacion Contenido="E-Mail" DireccionImagen="/imagenes/emailLogo.png"  Redireccionamiento="" Active=true></CuadroNavegacion>
                </div>
            </div>
        </div>
     
        <a href="/Logout">Log out</a>


    </Authorized>
    <NotAuthorized>
        <header id="cabecera">
            <div class="costadoIzq">
                <div><img src="/imagenes/Home.png" alt="PIM"></div>
                <div class="title">
